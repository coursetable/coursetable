{
  "scripts": {
    "prestart": "yarn prisma db pull && yarn prisma generate",
    "start": "yarn ts-node-dev --debug --files --exit-child src/server.ts",
    "prod": "yarn ts-node --files src/server.ts",
    "checks": "yarn run depcheck && yarn run lint && yarn run typecheck",
    "depcheck": "npx depcheck . --json",
    "lint": "yarn prettier -l . && yarn eslint src",
    "typecheck": "tsc --noEmit && (tsc --noEmit --checkJs || true)"
  },
  "nodemonConfig": {
    "ignore": [
      "static/*"
    ]
  },
  "dependencies": {
