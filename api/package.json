    "@types/body-parser": "^1.19.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.3",
    "@types/mysql": "^2.15.19",
    "@types/node": "^16.7.3",
    "@types/passport": "^1.0.7",
    "@types/psl": "^1.1.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.25.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
