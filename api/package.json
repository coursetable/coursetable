{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run codegen && npm run codegen:format && tsx watch src/server.ts",
    "start:prod": "npm run codegen && tsx src/server.ts",
    "db:push": "drizzle-kit push:pg",
    "codegen": "graphql-codegen --config graphql-codegen.ts && tsx ../tools/fix-gql-generated-code.mts",
    "codegen:format": "prettier -w src/**/*.queries.ts src/graphql-types.ts"
  },
  "dependencies": {
    "@coursetable/passport-cas": "^0.1.2",
    "@sentry/node": "^8.34.0",
    "chroma-js": "^3.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "drizzle-orm": "^0.30.10",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.1",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "graphql-tag": "^2.12.6",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "0.5.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0",
    "sitemap": "^8.0.0",
    "tsx": "^4.19.1",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/bun": "^1.1.11",
    "@types/chroma-js": "^2.4.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "@types/passport": "^1.0.16",
    "drizzle-kit": "^0.20.18"
  }
}
