ignores:
  # TypeScript
  - '@types/*'
  - ts-node
  - typescript
  - typescript-plugin-css-modules
  - tsconfig-*

  # GraphQL
  - graphql
  - '@graphql-codegen/*'

  # Linting
  - '@typescript-eslint/*'
  - eslint-*
  - prettier
  - stylelint-config-standard

  # This is actually unused, but we keep it just in case you want to use it
  - core-js

  # This import is produced by the MDX loader
  - '@mdx-js/react'
skip-missing: true
parsers:
  '**/*.{mts,ts,tsx,mjs,js,jsx}': typescript
