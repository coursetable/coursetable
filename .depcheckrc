ignores:
  # TypeScript
  - '@types/*'
  - typescript
  - typescript-plugin-css-modules
  - tsconfig-*

  # GraphQL (used in codegen files)
  - graphql
  - '@graphql-codegen/*'
  - graphql-tag
  - graphql-request

  # Linting
  - '@typescript-eslint/*'
  - eslint-*
  - prettier
  - stylelint-config-standard
  - lint-staged

  # This is actually unused, but we keep it just in case you want to use it
  - core-js

  # This import is produced by the MDX loader
  - '@mdx-js/react'
skip-missing: true
parsers:
  '**/*.{mts,ts,tsx,mjs,js,jsx}': typescript
