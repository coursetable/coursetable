{
  "extends": "tsconfig-jc",
  "compilerOptions": {
    "noEmit": true,
    "module": "node16",
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
    ],
    // TODO: enable these
    "exactOptionalPropertyTypes": false,
  },
  "include": ["./**/*", "./eslint.config.mjs"],
  // These have their own tsconfig
  "exclude": ["./api", "./frontend"],
}
