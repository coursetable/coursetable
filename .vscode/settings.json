{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "dist": true
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "search.exclude": {
    "dist/**": true,
    "api/static": true,
    "**/node_modules": true,
    "**/.eslintcache": true,
    "**/bower_components": true,
    "**/api/mysql/database.sql": true
  },
  "cSpell.words": [
    "Unflatten",
    "colormap",
    "evals",
    "noopener",
    "noreferrer",
    "toastify",
    "unstyled"
  ],
  "eslint.workingDirectories": [
    "api",
    "frontend",
    "proxy"
  ]
}
