{
  "name": "coursetable",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "api",
    "frontend"
  ],
  "scripts": {
    "start:backend": "cd docker && ./start.sh",
    "start:frontend": "cd frontend && ./start.sh",
    "checks": "bun run depcheck && bun run lint && bun run typecheck",
    "depcheck": "bunx depcheck api --json && bunx depcheck frontend --json",
    "lint": "prettier -l . && eslint .",
    "typecheck": "cd api && tsc --noEmit && cd ../frontend && tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3"
  }
}
