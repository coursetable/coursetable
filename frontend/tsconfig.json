{
  "extends": "..",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    // We use ESLint for this
    "allowUnreachableCode": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
    ],
  },
  "include": ["src", "vite.config.ts"],
  "exclude": [],
}
